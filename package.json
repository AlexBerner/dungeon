{
  "name": "dungeon",
  "version": "1.0.0",
  "description": "Simple HTML5 dungeon generator.",
  "repository": "git@github.com:nickgravelyn/dungeon.git",
  "author": "Nick Gravelyn <nick@gravelyn.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@nickgravelyn/eslint-config": "^1.1.0",
    "eslint": "^5.2.0",
    "gh-pages": "^1.2.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "parcel-bundler": "^1.9.7"
  },
  "scripts": {
    "build": "parcel build src/index.html",
    "watch": "parcel src/index.html",
    "lint": "eslint .",
    "gh-pages": "rm -rf ./dist && yarn build --no-source-maps --public-url /dungeon && gh-pages -d dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint . --fix",
      "git add"
    ]
  }
}
